{
  "description": "Template para AWS Secrets Manager - SINE Chatbot",
  "secrets": {
    "whatsapp-credentials": {
      "type": "AWS Secrets Manager Secret",
      "description": "WhatsApp Business API credentials",
      "value": {
        "access_token": "EAAxxxxxxxxxxxxxxxxxxxxxx",
        "verify_token": "sine_chatbot_webhook_verify_2024",
        "phone_number_id": "123456789012345",
        "business_account_id": "987654321098765"
      }
