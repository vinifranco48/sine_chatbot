    "update_secret": "aws secretsmanager update-secret --secret-id whatsapp-credentials --secret-string file://whatsapp-secret.json",
    "lambda_code": "Use boto3.client('secretsmanager').get_secret_value(SecretId='whatsapp-credentials') no Lambda"
