{
  "description": "WhatsApp Business API Configuration for SINE Chatbot",
  "meta_graph_api": {
    "base_url": "https://graph.facebook.com/v18.0",
    "endpoints": {
      "send_message": "/{phone_number_id}/messages",
      "get_business_info": "/{business_account_id}",
      "webhook_verification": "/webhook"
    }
  },
  "webhook": {
    "verify_token_field": "hub.verify_token",
    "challenge_field": "hub.challenge",
    "mode_field": "hub.mode"
  },
  "message_types": {
    "text": {
      "type": "text",
      "max_length": 4096
    },
    "interactive": {
      "type": "interactive",
      "supported_types": ["button", "list"]
    }
  },
  "rate_limits": {
    "messages_per_second": 50,
    "messages_per_day": 1000,
    "burst_limit": 100
  },
  "timeouts": {
    "webhook_response": 20,
    "api_request": 30,
    "message_delivery": 300
  },
  "error_codes": {
    "invalid_token": 190,
    "rate_limit": 613,
    "phone_number_not_found": 131026,
    "message_undeliverable": 131047
  }
}